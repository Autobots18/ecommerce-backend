  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run serve",
    "serve": "node dist/index.js",
    "serve:debug": "nodemon --inspect-brk dist/index.js",
    "build": "tsc",
    "watch:node": "nodemon dist/index.js",
    "watch:ts": "tsc -w",
    "watch": "concurrently -k -p '[{name}]' -n 'Typescript,Node' -c 'yellow.bold,green.bold' 'npm run watch:ts' 'npm run watch:node'",
    "watch:debug": "concurrently -k -p '[{name}]' -n 'Typescript,Node' -c 'yellow.bold,green.bold' 'npm run watch:ts' 'npm run serve:debug'",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch:debug",
    "test": "mocha"
  },
  "dependencies": {
    "amqplib": "^0.5.2",
    "axios": "^0.18.0",
    "bcrypt": "^2.0.1",
    "dotenv": "^6.0.0",
    "elasticsearch": "^15.0.0",
    "glob": "^7.1.2",
    "good": "^8.1.1",
    "good-winston": "^4.0.0",
    "handlebars": "^4.0.11",
    "hapi": "^17.5.1",
    "hapi-auth-jwt2": "^8.1.0",
    "hapi-swagger": "^9.1.1",
    "hapijs-status-monitor": "ziyasal/hapijs-status-monitor",
    "inert": "^5.1.0",
    "joi": "^13.4.0",
    "jsonwebtoken": "^8.3.0",
    "moment": "^2.22.2",
    "mongoose": "^5.1.5",
    "slug": "^0.9.1",
    "socket.io": "^2.1.1",
    "ts-node": "^7.0.0",
    "vision": "^5.3.3",
    "winston": "^2.4.3",
    "winston-daily-rotate-file": "^3.2.1"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.7",
    "@types/bcrypt": "^2.0.0",
    "@types/chai": "^4.1.3",
    "@types/dotenv": "^4.0.3",
    "@types/elasticsearch": "^5.0.24",
    "@types/glob": "^5.0.35",
    "@types/handlebars": "^4.0.38",
    "@types/hapi": "^17.0.12",
    "@types/hapi-auth-jwt2": "^8.0.1",
    "@types/inert": "^5.1.1",
    "@types/joi": "^13.0.8",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/mocha": "^5.2.2",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.0.15",
    "@types/slug": "^0.9.0",
    "@types/socket.io": "^1.4.36",
    "@types/vision": "^5.3.4",
    "@types/winston": "^2.3.9",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "tslint": "^5.10.0",
    "tslint-config-airbnb-base": "^0.1.0",
    "typescript": "^2.9.1"
  }
